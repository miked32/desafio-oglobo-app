<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_normal">

    <ImageView
        android:id="@+id/ivRowImage"
        android:scaleType="fitXY"
        android:layout_width="@dimen/image_width_normal"
        android:layout_height="@dimen/image_height_normal" />

    <TextView
        android:id="@+id/tvRowSecaoNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivRowImage"
        android:layout_toEndOf="@id/ivRowImage"
        android:layout_marginStart="@dimen/spacing_normal"
        android:layout_marginLeft="@dimen/spacing_normal"
        style="@style/TextListRowSecaoNome"/>

    <TextView

        android:id="@+id/tvRowTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRowSecaoNome"
        android:layout_alignLeft="@+id/tvRowSecaoNome"
        android:layout_alignStart="@+id/tvRowSecaoNome"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:layout_alignBottom="@+id/ivRowImage"
        style="@style/TextListRowTitulo"/>

</RelativeLayout>